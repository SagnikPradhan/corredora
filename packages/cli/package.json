{
  "name": "@corredora/cli",
  "bin": {
    "corredora": "./server/dist/index.js"
  },
  "files": [
    "./server/dist",
    "./web/dist"
  ],
  "scripts": {
    "dev": "concurrently yarn:cli-web:dev yarn:cli-server:dev",
    "build": "yarn cli-server:build && yarn cli-web:build",
    "cli-server:dev": "tsc -p ./server/tsconfig.json -w --preserveWatchOutput",
    "cli-server:build": "tsc -p ./server/tsconfig.json",
    "cli:dev": "yarn dev",
    "cli:build": "yarn build"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "koa": "^2.13.1",
    "koa-static": "^5.0.0",
    "serve-handler": "^6.1.3",
    "socket.io": "^4.1.2"
  },
  "devDependencies": {
    "@types/koa": "^2",
    "@types/koa-static": "^4.0.1",
    "@types/koa__cors": "^3",
    "@types/node": "^15.6.0",
    "@types/serve-handler": "^6",
    "concurrently": "^6.1.0",
    "typescript": "^4.2.4"
  }
}
